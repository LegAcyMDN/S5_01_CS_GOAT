    public class RegisterModel
    {
        [Required(ErrorMessage = "Le login est requis")]
        [MinLength(3, ErrorMessage = "Le login doit contenir au moins 3 caractères")]
        [MaxLength(50, ErrorMessage = "Le login ne peut pas dépasser 50 caractères")]
        [RegularExpression(@"^[a-zA-Z0-9_-]+$", ErrorMessage = "Le login ne peut contenir que des lettres, chiffres, tirets et underscores")]
        public string Login { get; set; } = string.Empty;

        [Required(ErrorMessage = "Le nom d'affichage est requis")]
        [MinLength(2, ErrorMessage = "Le nom d'affichage doit contenir au moins 2 caractères")]
        [MaxLength(100, ErrorMessage = "Le nom d'affichage ne peut pas dépasser 100 caractères")]
        public string DisplayName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Le mot de passe est requis")]
        [MinLength(8, ErrorMessage = "Le mot de passe doit contenir au moins 8 caractères")]
        [MaxLength(100, ErrorMessage = "Le mot de passe ne peut pas dépasser 100 caractères")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Veuillez confirmer le mot de passe")]
        public string ConfirmPassword { get; set; } = string.Empty;

        [EmailAddress(ErrorMessage = "Format d'email invalide")]
        public string? Email { get; set; }

        [Phone(ErrorMessage = "Format de téléphone invalide")]
        [RegularExpression(@"^[\d\s\+\-\(\)]+$", ErrorMessage = "Format de téléphone invalide")]
        public string? Phone { get; set; }

        public bool Remember { get; set; } = false;
    }
