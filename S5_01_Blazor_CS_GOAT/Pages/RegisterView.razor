@page "/register"
@using System.ComponentModel.DataAnnotations
@using System.Text.RegularExpressions
@using S5_01_Blazor_CS_GOAT.Service
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject HttpClient HttpClient

<div class="container-form">
    <div class="form-box">
        <h3>Créer un compte</h3>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <form @onsubmit="HandleRegister" @onsubmit:preventDefault="true">
            <div class="margin-bottom-10">
                <div class="wrapper usr-register">
                    <div class="cta">
                        <label for="login" class="form-label">Identifiant :*</label>
                        <input type="text" id="login" name="login" class="form-control @(validationErrors.ContainsKey("Login") ? "is-invalid" : "")" @bind="registerModel.Login" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("Login"))
                {
                    <div class="error-message">@validationErrors["Login"]</div>
                }
            </div>

            <div class="margin-bottom-10">
                <div class="wrapper usr-displayname">
                    <div class="cta">
                        <label for="displayName" class="form-label">Nom d'affichage :*</label>
                        <input type="text" id="displayName" name="displayName" class="form-control @(validationErrors.ContainsKey("DisplayName") ? "is-invalid" : "")" @bind="registerModel.DisplayName" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("DisplayName"))
                {
                    <div class="error-message">@validationErrors["DisplayName"]</div>
                }
            </div>

            <div class="margin-bottom-10">
                <div class="wrapper usr-password">
                    <div class="cta">
                        <label for="password" class="form-label">Mot de passe :*</label>
                        <input type="password" id="password" name="password" class="form-control @(validationErrors.ContainsKey("Password") ? "is-invalid" : "")" @bind="registerModel.Password" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("Password"))
                {
                    <div class="error-message">@validationErrors["Password"]</div>
                }
            </div>

            <div class="margin-bottom-10">
                <div class="wrapper usr-confirm-password">
                    <div class="cta">
                        <label for="confirmPassword" class="form-label">Confirmer le mot de passe :*</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control @(validationErrors.ContainsKey("ConfirmPassword") ? "is-invalid" : "")" @bind="registerModel.ConfirmPassword" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("ConfirmPassword"))
                {
                    <div class="error-message">@validationErrors["ConfirmPassword"]</div>
                }
            </div>

            <div class="margin-bottom-10">
                <div class="wrapper usr-email">
                    <div class="cta">
                        <label for="email" class="form-label">Email :</label>
                        <input type="email" id="email" name="email" class="form-control @(validationErrors.ContainsKey("Email") ? "is-invalid" : "")" @bind="registerModel.Email" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("Email"))
                {
                    <div class="error-message">@validationErrors["Email"]</div>
                }
            </div>

            <div class="margin-bottom-10">
                <div class="wrapper usr-phone">
                    <div class="cta">
                        <label for="phone" class="form-label">Téléphone :</label>
                        <input type="text" id="phone" name="phone" class="form-control @(validationErrors.ContainsKey("Phone") ? "is-invalid" : "")" @bind="registerModel.Phone" />
                    </div>
                </div>
                @if (validationErrors.ContainsKey("Phone"))
                {
                    <div class="error-message">@validationErrors["Phone"]</div>
                }
                <small class="form-text text-muted">Un email ou un téléphone est requis</small>
            </div>

            <div class="usr-remember">
                <label class="container" for="remember">
                    <input id="remember"
                           type="checkbox"
                           @bind="registerModel.Remember">
                    <svg viewBox="0 0 64 64" height="0.9em" width="0.9em">
